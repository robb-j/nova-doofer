{
  "identifier": "robb-j.text-utils",
  "name": "Text Utilites",
  "organization": "Rob Anderson",
  "description": "Lorem ipsum, dolor sit amet.",
  "version": "1.0",
  "categories": ["commands"],
  "license": "MIT",
  "repository": "https://github.com/robb-j/nova-text-utils",
  "bugs": "https://github.com/robb-j/nova-text-utils/issues",

  "main": "main.dist.js",

  "activationEvents": [],

  "entitlements": {},

  "commands": {
    "editor": [
      {
        "title": "Base64 Decode",
        "command": "robb-j.text-utils.base64Decode",
        "when": "editorHasSelection"
      },
      {
        "title": "Base64 Encode",
        "command": "robb-j.text-utils.base64Encode",
        "when": "editorHasSelection"
      },
      {
        "title": "JWT Decode",
        "command": "robb-j.text-utils.jwtDecode",
        "when": "editorHasSelection"
      },
      {
        "title": "Lorem Ipsum",
        "command": "robb-j.text-utils.loremIpsum"
      },
      {
        "title": "Sort Lines",
        "command": "robb-j.text-utils.sortLines",
        "when": "editorHasSelection"
      }
    ]
  },

  "configWorkspace": [
    {
      "title": "Lorem ipsum generator",
      "key": "",
      "description": "Configure how text is randomly generated.",
      "type": "section",
      "children": [
        {
          "key": "robb-j.text-utils.sentence-min",
          "title": "The minimum number of words in a sentence",
          "type": "number"
        },
        {
          "key": "robb-j.text-utils.sentence-max",
          "title": "The maximum number of words in a sentence",
          "type": "number"
        },
        {
          "key": "robb-j.text-utils.paragraph-min",
          "title": "The minimum number of sentences in a paragraph",
          "type": "number"
        },
        {
          "key": "robb-j.text-utils.paragraph-max",
          "title": "The maximum number of sentences in a paragraph",
          "type": "number"
        }
      ]
    }
  ]
}
